@model TaxCalculatorClient.Models.TaxCalculator
@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <div style="width: 100%; height: 17rem;"></div>
        <div class="window">

            <div class="box">
                <div class="text-left">
                    <h1 class="form-heading">
                        <svg style="top:-4px; position:relative; margin-right:.8rem;" class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                        Fill in the tax form
                    </h1>
                </div>
                <div class="inner-container">
                    <div style="width:46%; ">

                        @using (Html.BeginForm("Calculate", "TaxCalculator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <!--<form asp-action="TaxCalculator" method="post">-->
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="AnnualIncome" class="control-label" style="width:100%; text-align:left; font-size:1.8rem;"></label>


                                <input asp-for="AnnualIncome" class="form-control" style="font-size:1.6rem;" />
                                <span asp-validation-for="AnnualIncome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PostalCode" class="control-label" style="width:100%; text-align:left; font-size:1.8rem;"></label>
                                <select asp-for="PostalCode" class="form-control" style="font-size:1.6rem;">
                                    <option>7441</option>
                                    <option>A100</option>
                                    <option>7000</option>
                                    <option>1000</option>
                                </select>
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Calculate" class="btn " style="width:100%; background-color:#222a34; color:rgb(111,183,47); font-size:1.8rem;" />
                            </div>
                            <!--</form>-->
                        }
                    </div>

                    <div class="seperator"></div>
                    <div style="font-size: 1.8rem; width:46%; height:100%; text-align:left;">
                        Income Tax Payable:
                        <div style="font-size: 1.8rem; width:100%; height:85%; display:flex; justify-content:center;">
                            <span class="navbar-brand" style="text-align:center; vertical-align:middle; font-size: 2rem; align-self:center; font-weight:700;">
                                @Html.Label("{0}", string.Format("{0:C2}", Model.TaxPayable),
                               new { @class = "text-box" })
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}